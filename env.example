# Application Configuration
# Copy this file to .env.dev and modify as needed
# cp env.example .env.dev

APP_NAME="YOLO Dataset Annotation API"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY=yolo-secret-key-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGO_DB_NAME=yolo_annotation
MONGODB_MAX_POOL_SIZE=10

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=yolo-datasets
MINIO_SECURE=false

# File Upload Configuration
MAX_UPLOAD_SIZE=107374182400  # 100GB in bytes
UPLOAD_CHUNK_SIZE=10485760     # 10MB in bytes
TEMP_DIR=/tmp/yolo_uploads

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=120
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Image Processing Configuration
DEFAULT_THUMBNAIL_QUALITY=80

# YOLO Annotation Configuration
MAX_ANNOTATIONS_PER_IMAGE=1000
ANNOTATION_CONFIDENCE_THRESHOLD=0.1
YOLO_VALIDATION_TIMEOUT=300

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50

